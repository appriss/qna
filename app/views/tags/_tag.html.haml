%h1(style="font-size: 32px;")
  = tag.name
  -if local_assigns[:show_counter]
    (#{tag.count} questions)
.tools(style="float: none; margin-top: 10px;")
  -if logged_in? && current_user.mod_of?(current_group)
    = link_to t("scaffold.edit"), edit_tag_path(tag)
    = link_to t("scaffold.destroy"), tag_path(tag), :method => :delete, :sure => t("scaffold.sure", :model => "tag")
  = follow_tag_link(tag)
  %i Followed by #{tag.followers_count} users